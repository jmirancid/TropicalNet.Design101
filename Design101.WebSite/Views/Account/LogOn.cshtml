@model Design101.WebSite.Models.LogOnModel

@{
    ViewBag.Title = "Log On";
}

@section Styles
{
    <link href="@Url.Content("~/Content/Styles/Bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Styles/Login.css")" rel="stylesheet" />
    <style type="text/css">
        html 
        {
            background-color: #222222;
        }
        body 
        {
            color: #aaaaaa;
            padding-top: 30px;
        }
        legend
        {
            color: #aaaaaa;
        }
        .validation-summary-errors, 
        .field-validation-error
        {
            color: #b2c831;
            display: block;
        }
    </style>
}

<div class="container">
    <div class="row">
        <div class="col-lg-offset-4 col-lg-4" style="margin-top: 100px">
            <div class="block-unit" style="text-align: center; padding: 8px 8px 8px 8px;">
                <img src="@Url.Content("~/Content/Images/face80x80.jpg")" alt="" class="img-circle" />
                @using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class = "cmxform", id = "signupForm" }))
                {
                    <div>
                        <fieldset>
                            <legend>Account Information</legend>
                            @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
                            <div class="editor-label">
                                @Html.LabelFor(m => m.UserName)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.UserName)
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(m => m.Password)
                            </div>
                            <div class="editor-field">
                                @Html.PasswordFor(m => m.Password)
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                            <div class="editor-label">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                            <p>
                                <input class="submit btn-success btn btn-large" type="submit" value="LogOn" />
                            </p>
                        </fieldset>
                    </div>
            }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
